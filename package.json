{
  "name": "ccc",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:js && npm run build:css",
    "build:js": "esbuild js/main.js --bundle --minify --sourcemap --outfile=dist/bundle.js",
    "build:dev": "npm run build:js:dev && npm run build:css:dev",
    "build:js:dev": "esbuild js/main.js --bundle --sourcemap --outfile=dist/bundle.js",
    "build:css": "esbuild css/index.css --bundle --minify --sourcemap --outfile=dist/style.css",
    "build:css:dev": "esbuild css/index.css --bundle --sourcemap --outfile=dist/style.css",
    "watch": "npm run build:css:dev && npm run build:js:dev -- --watch",
    "serve": "esbuild js/main.js --bundle --sourcemap --outfile=dist/bundle.js --servedir=. --watch"
  },
  "devDependencies": {
    "esbuild": "^0.27.0"
  }
}
